= form_with(model: entry) do |form|
  - if entry.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(entry.errors.count, "error")
        prohibited this entry from being saved:
      %ul
        - entry.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :date, style: "display: block"
    = form.date_field :date
  %div
    = form.label :hours, style: "display: block"
    = form.number_field :hours , step: 0.5
  %div
    = form.label :is_overtime, style: "display: block"
    = form.check_box :is_overtime
  %div
    = form.submit
